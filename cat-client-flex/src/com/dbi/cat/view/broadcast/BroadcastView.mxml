<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" 
		   width="100%" height="100%" 
		   xmlns:workspace="com.dbi.cat.view.workspace.*"
		   creationComplete="init()" xmlns:broadcast="com.dbi.cat.view.broadcast.*">
	<mx:Script>
		<![CDATA[
			import com.dbi.cat.common.constants.EntryPointType;
			import com.dbi.cat.common.vo.CampaignVO;
			import com.dbi.cat.common.vo.CouponNodeVO;
			import com.dbi.cat.common.vo.CouponVO;
			import com.dbi.cat.common.vo.MessageVO;
			
			[Bindable]
			private var campaign:CampaignVO;
			
			[Bindable]
			private var message:MessageVO;
			
			[Bindable]
			private var coupon:CouponNodeVO;
			
    [Bindable]
    public var isSendingBroadcast:Boolean = false;
        
			private function init():void
			{
				newBroadcast();
			}
			
			private function newBroadcast():void
			{
				campaign = new CampaignVO();
				message = new MessageVO();
				coupon = new CouponNodeVO();
			}
		]]>
	</mx:Script>
	
	<mx:TabNavigator
		horizontalCenter="0"
		width="90%"
		maxWidth="1000"
		top="10" bottom="10"
		tabOffset="-10"
		horizontalAlign="right"
		borderStyle="none"
		paddingTop="0">
  <broadcast:CouponMessageBroadcastView
      label="Coupon Message"  />
		<broadcast:MessageBroadcastView
        label="Message" />
	</mx:TabNavigator>
</mx:Canvas>
