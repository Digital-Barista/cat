<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" xmlns:reporting="com.dbi.cat.view.reporting.*">
	<mx:Script>
		<![CDATA[
			import com.dbi.cat.event.CouponEvent;
			
			[Bindable]
	        [Embed("/assets/img/refresh.png")]
	        private var refreshIcon:Class;
			
			private function refresh():void
			{
				dispatchEvent(new CouponEvent(CouponEvent.GET_COUPON_SUMMARY_BY_CLIENT));
			}
		]]>
	</mx:Script>
	<mx:Canvas
		horizontalCenter="0"
		width="90%"
		maxWidth="1000"
		top="10" bottom="10">
		<mx:TitleWindow 
			width="100%" height="100%"
			layout="absolute">
		</mx:TitleWindow>
		<mx:TabNavigator 
			id="Tabs"
			right="0" left="0" top="0" bottom="0"
			horizontalAlign="right">
			<reporting:CouponReportingView label="Coupons" />
			<reporting:CouponRedemptionView label="Redeem Coupon" />
		</mx:TabNavigator>
		<mx:Image source="{refreshIcon}"
			visible="{Tabs.selectedIndex == 0}"
			top="3" right="200"
			width="25" height="25"
			toolTip="Refresh"
			click="refresh()" />
	</mx:Canvas>
</mx:Canvas>
