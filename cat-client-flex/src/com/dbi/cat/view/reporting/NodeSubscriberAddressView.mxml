<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="absolute" width="300" height="500"
	showCloseButton="true"
	close="onClose()"
	title="Subscribers">
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import com.dbi.cat.event.ReportingEvent;
			
			[Bindable]
			public var isLoadingNodeSubscriberAddresses:Boolean = false;
			
			[Bindable]
			public var nodeSubscriberAddresses:ArrayCollection;
			
			private function onClose():void
			{
				dispatchEvent(new ReportingEvent(ReportingEvent.CLOSE_NODE_SUBSCRIBERS));
			}
		]]>
	</mx:Script>
	<mx:Canvas width="100%" height="100%">
		<mx:ProgressBar width="200" height="20"
			label="Loading Subscribers..."
			labelPlacement="center"
			indeterminate="true"
			verticalCenter="0" horizontalCenter="0"
			visible="{isLoadingNodeSubscriberAddresses}" />
	</mx:Canvas>
	<mx:DataGrid  width="100%" height="100%"
		dataProvider="{nodeSubscriberAddresses}"
		visible="{!isLoadingNodeSubscriberAddresses}">
		<mx:columns>
			<mx:DataGridColumn headerText="Address"  />
		</mx:columns>
	</mx:DataGrid>
</mx:TitleWindow>
